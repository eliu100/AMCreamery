<div class="row">
  <div class="col s8">
    <div class="card">    
      <div class="card-content">
        <span class="card-title">Jobs Performed</span>
        <%= simple_form_for @shift, :url => update_shift_jobs_path(@shift) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="form-inputs">
                <%= f.association :jobs %>
          </div>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="form-actions col s8">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col s4">
    <h4>For Shift:</h4>
    <h5>Date: <%= @shift.date.strftime("%B %d, %Y") %></h5>
    <h5>Employe: <%= @shift.employee.name %> </h5>
    <h5>Times: <%= @shift.start_time.strftime("%l:%M %P") %>- <%= @shift.end_time.nil? ? 'Now' : @shift.end_time.strftime("%l:%M %P") %> </h5>
  </div>
</div>
<%= link_to 'Back', :back %>